<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.yp.oom">

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />

    <application
        android:name="com.office.app.MyApplication"
        android:usesCleartextTraffic="true"
        android:allowBackup="true"
        android:icon="@mipmap/logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/logo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.office.yewu.SplashActivity"
            android:theme="@style/LunchTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.office.yewu.OfficeVideoActivity"/>
        <activity android:name="com.office.yewu.search.SearchActivity" />
        <activity android:name="com.office.yewu.products.ProductsActivity">
        </activity>
        <activity android:name="com.office.yewu.MainActivity" />
        <activity android:name="com.office.test.TestVideoActivity"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:screenOrientation="portrait">
        </activity>
        <activity android:name="com.office.yewu.StandbyActivity"/>
        <activity android:name="com.office.yewu.search.SearchResultActivity"/>
        <activity android:name="com.office.yewu.product_detail.ProductDetailActivity"/>
    </application>

</manifest>